---
import Cell from "./Cell.astro";
import Label from "./Label.astro";

interface Props {
    id: string;
    placeHolder: string;
}

const { id, placeHolder } = Astro.props;
---

<Cell>
    <Label><slot /></Label>

    <div
        class="w-full px-3 py-2 rounded bg-gray-700/50 text-white cursor-pointer"
        onclick={`document.getElementById('${id}').showPicker?.() ?? document.getElementById('${id}').click();`}
    >
        <input
            type="date"
            id={id}
            name={id}
            placeholder={placeHolder}
            required
            class="w-full bg-transparent outline-none cursor-pointer pointer-events-none"
        />
    </div>
</Cell>
