---
import Cell from "./Cell.astro";
import Label from "./Label.astro";

interface Props {
    id: string;
    placeHolder: string;
}

const { id, placeHolder } = Astro.props;
---

<Cell>
    <Label><slot /></Label>
    <input
        type="text"
        id={id}
        name={id}
        class="w-full px-3 py-2 rounded bg-gray-700/50 text-white"
        placeholder={placeHolder}
        required
    />
</Cell>
